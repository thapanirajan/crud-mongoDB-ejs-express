<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All users</title>
    <!-- <link rel="stylesheet" href="stylesheet/styles.css" /> -->
    <style>
      * {
        padding: 0;
        margin: 0;
      }
      .container {
        width: 97vw;
        /* height: 200vh; */
        height: fit-content;
        background-color: #303232;
        color: white;
        padding: 1rem;
      }

      .container a {
        text-decoration: none;
        padding: 1rem 0;
        color: white;
      }
      h1 {
        /* padding: ; */
        margin-top: 30px;
      }
      .users {
        margin-top: 1rem;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        grid-template-rows: auto auto;
        gap: 1rem;
      }
      .user {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        border: 1px solid white;
        align-items: center;
        padding: 3rem;
        border-radius: 10px;
      }

      img {
        width: 100px;
        height: 100px;
        background-color: #081232;
        padding: 1rem;
        border-radius: 10px;
        object-fit: cover;
      }

      .btn {
        margin-top: 1rem;
        display: flex;
        gap: 10px;
        cursor: pointer;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/">Go to home page</a>
      <h1>All Users</h1>
      <div class="users">
        <% if (users.length> 0) { %> <% for (user of users) { %>
        <div class="user">
          <div class="img"><img src="<%= user.image %>" /></div>
          <div><%= user.user %></div>
          <div><%= user.email %></div>
          <div class="btn">
            <a class="edit" href="/edit/<%= user._id %>">Edit user</a>
            <a style="color: red" href="/delete/<%= user._id %>" class="delete"
              >Delete user</a
            >
          </div>
        </div>
        <% } %> <% } else { %>
        <h3 style="color: #ccc">No users yet</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
